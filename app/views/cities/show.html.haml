.row.collapse.expanded
  .small-12.medium-12.large-12.columns
    .orbit
      %ul.orbit-container
        %li.is-active.orbit-slide
          = image_tag @city.city_image
          %span.orbit-caption
            %h1.text-center.city_header_text= @city.city_name + ", " + @city.city_state
  .large-6.large-centered.columns
    %button#newPostButton.submit-button{onclick: "location.href = '/cities/" + @city.id.to_s + "/posts/new'"} Add New Post

    - if @posts
      - @posts.each do |post|
        %h4= link_to post.title, url: "/cities/#{@city.id.to_s}/posts/#{post.id.to_s}"
        %span= post.content
        %hr
