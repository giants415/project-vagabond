.row
  .large-8.column
    = form_for [@city, @post] do |f|
      .large-6.column.login-footer-space
        .card
          .title.sign-up-title Update Your Post Below!
          = f.label :title, 'Title:'
          = f.text_field :title

          = f.label :content, 'Content:'
          = f.text_area :content

          = f.submit 'Update Post!'
