.row
  .large-8.column
    = form_for @post do |f|
      .large-6.column.login-footer-space
        .card
          .title.sign-up-title Create a post below!
          = f.label :title, 'Title:'
          = f.text_field :title

          = f.label :content, 'Content:'
          = f.text_area :content

          = f.submit 'Create Post!'
