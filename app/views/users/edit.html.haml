.row
  .large-8.column
    = form_for @user do |f|
      .large-6.column.login-footer-space
        .card
          .title.sign-up-title Update Your Profile Below!
          = f.label :first_name, 'First Name:'
          = f.text_field :first_name

          = f.label :last_name, 'Last Name:'
          = f.text_field :last_name

          = f.label :username, 'Username:'
          = f.text_field :username

          = f.label :email, 'Email:'
          = f.text_field :email

          = f.label :city, 'City:'
          = f.text_field :city

          = f.submit 'Update!'
