!!!
%html
  %head
    %title VagabondApp
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %div
      .contain-to-grid.sticky
        %nav.top-bar{:class => "navBar", "data-options" => "sticky_on: large", "data-topbar" => "", :role => "navigation"}
          %ul
            - if current_user
              %li= link_to "Profile", user_path(current_user)
              %li= link_to "Log Out", logout_path
            - else
              %li= link_to "Create Account", new_user_path
              %li= link_to "Log In", new_session_path
      %div{:class => columns}
        %div{:class => row}
        %div{:class => row}
        %div{:class => row}
      = yield
